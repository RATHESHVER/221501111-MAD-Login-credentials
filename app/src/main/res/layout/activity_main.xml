<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REC Student Login"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Spacing for visual separation -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- Username Input Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etusername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Username"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/usernameTick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tick_icon"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Username Helper Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username must contain at least one uppercase letter."
        android:textSize="14sp"
        android:textColor="#FF0000"
        android:layout_marginTop="5dp"/>

    <!-- Password Input Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Enter Password"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/passwordTick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tick_icon"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Password Helper Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password must contain at least one uppercase letter, one number, and one special character."
        android:textSize="14sp"
        android:textColor="#FF0000"
        android:layout_marginTop="5dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/etregisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:padding="12dp"/>

    <!-- Login Button -->
    <Button
        android:id="@+id/etloginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:padding="12dp"/>

    <!-- Spacing for visual separation -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <!-- Footer Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The world needs you"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by Ratheshver"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"/>

</LinearLayout>
